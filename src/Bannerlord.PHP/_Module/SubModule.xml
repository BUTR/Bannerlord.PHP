    <DependedModule Id="Native" Optional="true" DependentVersion="e$gameversion$.*" />
    <DependedModule Id="SandBoxCore" Optional="true" DependentVersion="e$gameversion$.*" />
    <DependedModule Id="Sandbox" Optional="true" DependentVersion="e$gameversion$.*" />
    <DependedModule Id="StoryMode" Optional="true" DependentVersion="e$gameversion$.*" />
